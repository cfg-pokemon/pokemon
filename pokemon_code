import random
import requests


def chosen_pokemon():
    pokemon_number = input("What is the Pokemon's ID?")
    url = 'https://pokeapi.co/api/v2/pokemon/{}/'.format(pokemon_number)
    response = requests.get(url)
    pokemon = response.json()
    return {
        'name': pokemon['name'],
        'id': pokemon['id'],
        'height': pokemon['height'],
        'weight': pokemon['weight'],
    }


def random_pokemon():
    pokemon_number = random.randint(1, 151)
    url = 'https://pokeapi.co/api/v2/pokemon/{}/'.format(pokemon_number)
    response = requests.get(url)
    pokemon = response.json()
    return {
        'name': pokemon['name'],
        'id': pokemon['id'],
        'height': pokemon['height'],
        'weight': pokemon['weight'],
    }


score = 0
total_score = 0

for round in range (5):
    print("Round", round +1)

    for turn in range(3):
        print("Turn", turn + 1)
        my_pokemon = chosen_pokemon()
        print('You chose {}'.format(my_pokemon['name']))
        stat_choice = input('Which stat do you want to use? (id, height, weight) ')

        opponent_pokemon = random_pokemon()
        print('The opponent chose {}'.format(opponent_pokemon['name']))

        my_stat = my_pokemon[stat_choice]
        opponent_stat = opponent_pokemon[stat_choice]
        if my_stat > opponent_stat:
            print('Congratulations! You Win!')
            score += 1
        else:
            if my_stat < opponent_stat:
                print('You Lose! Try again!')
            else:
                print('Draw! Try again!')
            if turn == 3:
                break

    print("Game Over! You won {}/3 points!".format(score))

    my_score = score
    opponent_score = 5 - score

    if my_score > opponent_score:
        print('Congratulations! You win this round!')
        total_score += 1
    else:
        if my_score < opponent_score:
            print('You lose this round! Try again!')
        else:
            print('This round is a draw! Try again!')
        if round == 5:
            break
print("You won {}/5 rounds!".format(total_score))
